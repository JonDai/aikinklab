# Environment Configuration Template
# Copy this file to .env.local for local development

# Application Environment
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DOMAIN=localhost:3000

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=10000

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Security
SESSION_SECRET=your-super-secret-session-key-minimum-32-chars
CSRF_SECRET=your-super-secret-csrf-key-minimum-32-chars

# Database (Future use)
# DATABASE_URL=
# DATABASE_POOL_MAX=10

# Redis (Future use)  
# REDIS_URL=
# REDIS_PASSWORD=

# Email Service (Future use)
# EMAIL_FROM=noreply@aikinklab.com
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=

# File Storage (Future use)
# STORAGE_PROVIDER=vercel
# STORAGE_BUCKET=

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_ERROR_REPORTING=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_A11Y_TESTING=false

# Content Management
CONTENT_CACHE_TTL=3600
STATIC_CONTENT_TTL=86400

# Performance
IMAGE_OPTIMIZATION=true
BUNDLE_ANALYZER=false
WEBPACK_BUNDLE_SIZE_LIMIT=250000