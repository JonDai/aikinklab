# Production Environment Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Application URLs
NEXT_PUBLIC_APP_URL=https://www.aikinklab.com
NEXT_PUBLIC_DOMAIN=www.aikinklab.com

# API Configuration
API_BASE_URL=https://www.aikinklab.com/api
API_TIMEOUT=10000

# Analytics
NEXT_PUBLIC_GA_ID=${GA_TRACKING_ID}
NEXT_PUBLIC_GTM_ID=${GTM_CONTAINER_ID}

# Monitoring
SENTRY_DSN=${SENTRY_DSN_PRODUCTION}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.01

# Rate Limiting (Production limits)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Security
SESSION_SECRET=${PRODUCTION_SESSION_SECRET}
CSRF_SECRET=${PRODUCTION_CSRF_SECRET}

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_ERROR_REPORTING=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_A11Y_TESTING=false
FEATURE_DEBUG_MODE=false

# Performance Optimizations
IMAGE_OPTIMIZATION=true
BUNDLE_ANALYZER=false
WEBPACK_BUNDLE_SIZE_LIMIT=250000

# Content Caching (Aggressive for production)
CONTENT_CACHE_TTL=3600
STATIC_CONTENT_TTL=86400

# Production flags
PRODUCTION_MODE=true
DEBUG_LOGGING=false
MINIFY_CSS=true
MINIFY_JS=true