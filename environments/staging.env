# Staging Environment Configuration
NODE_ENV=staging
NEXT_TELEMETRY_DISABLED=1

# Application URLs
NEXT_PUBLIC_APP_URL=https://staging.aikinklab.com
NEXT_PUBLIC_DOMAIN=staging.aikinklab.com

# API Configuration
API_BASE_URL=https://staging.aikinklab.com/api
API_TIMEOUT=15000

# Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=

# Monitoring
SENTRY_DSN=${SENTRY_DSN_STAGING}
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting (More restrictive for staging)
RATE_LIMIT_MAX=50
RATE_LIMIT_WINDOW=900000

# Security
SESSION_SECRET=${STAGING_SESSION_SECRET}
CSRF_SECRET=${STAGING_CSRF_SECRET}

# Feature Flags for Testing
FEATURE_ANALYTICS=true
FEATURE_ERROR_REPORTING=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_A11Y_TESTING=true
FEATURE_DEBUG_MODE=true

# Performance
IMAGE_OPTIMIZATION=true
BUNDLE_ANALYZER=false
WEBPACK_BUNDLE_SIZE_LIMIT=300000

# Content
CONTENT_CACHE_TTL=1800
STATIC_CONTENT_TTL=43200

# Staging-specific flags
STAGING_MODE=true
DEBUG_LOGGING=true