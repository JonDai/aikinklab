{
  "name": "aikinklab",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "node scripts/performance-test.js",
    "perf": "npm run build && npm run lighthouse",
    "perf:ci": "npm run build && node scripts/performance-ci.js",
    "lhci": "lhci autorun",
    "lhci:upload": "lhci upload",
    "security-audit": "npm audit --audit-level high",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run lint && npm run type-check && npm run test:ci",
    "deploy:staging": "./scripts/deploy.sh staging develop",
    "deploy:production": "./scripts/deploy.sh production main"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "lucide-react": "^0.400.0",
    "next": "14.2.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.6.0",
    "web-vitals": "^3.5.2",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "chrome-launcher": "^0.15.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.15",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-testing-library": "^6.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "msw": "^2.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
