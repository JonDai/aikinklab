  /* Mobile input optimization */
  .input-modern {
    @apply py-4 px-4 text-base rounded-2xl;
    min-height: 52px;
  }

  /* Mobile badge optimization */
  .badge-modern,
  .badge-primary,
  .badge-accent {
    @apply py-2 px-4 text-sm rounded-xl;
  }

  /* Mobile-optimized glassmorphism (less intensive) */
  .card-glass {
    @apply backdrop-blur-lg;
  }

  .card-glass-intense {
    @apply backdrop-blur-xl;
  }

  /* Mobile-safe animations */
  @media (prefers-reduced-motion: no-preference) {
    .interactive-hover:active {
      @apply scale-95;
    }
    
    .magnetic-hover:active {
      @apply scale-95 rotate-1;
    }
  }
}

/* Dark mode optimizations */
@media (prefers-color-scheme: dark) {
  body {
    color-scheme: dark;
  }
}

/* Reduce motion for accessibility and battery optimization */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* Battery optimization for mobile devices */
@media (max-width: 768px) and (prefers-reduced-motion: no-preference) {
  .animate-pulse {
    animation-duration: 3s;
  }
  
  .animate-bounce {
    animation-duration: 1.5s;
  }
  
  .animate-ping {
    animation-duration: 2s;
  }
}

/* Aurora-specific enhancements */
.aurora-glow {
