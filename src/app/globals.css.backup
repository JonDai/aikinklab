}

.aurora-card {
  @apply bg-surface-800/20 backdrop-blur-xl border border-surface-700/30 rounded-3xl p-6 transition-all duration-500 hover:bg-surface-800/30 hover:border-primary-500/30 hover:shadow-glow-aurora;
}

.aurora-button {
  @apply bg-gradient-to-r from-primary-500 to-secondary-500 text-white px-6 py-3 rounded-2xl font-medium transition-all duration-300 hover:from-primary-400 hover:to-secondary-400 hover:shadow-glow-primary hover:scale-105 active:scale-95;
}

.aurora-badge {
  @apply bg-gradient-to-r from-primary-500/20 to-secondary-500/20 border border-primary-500/30 text-primary-300 px-3 py-1 rounded-full text-sm font-medium backdrop-blur-sm;
}

.aurora-input {
  @apply bg-surface-800/30 backdrop-blur-lg border border-surface-700/40 text-surface-200 px-4 py-3 rounded-xl transition-all duration-300 focus:border-primary-500/70 focus:bg-surface-800/40 focus:shadow-glow-inset;
