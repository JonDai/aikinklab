  .btn-secondary:active,
  .btn-accent:active,
  .btn-ghost:active,
  .btn-modern:active,
  .btn-glass:active {
    @apply scale-95;
  }

  /* Mobile typography scaling */
  .font-playfair {
    line-height: 1.2;
    letter-spacing: -0.01em;
  }

  /* Mobile-specific animations (reduced for battery life) */
  .animate-float,
