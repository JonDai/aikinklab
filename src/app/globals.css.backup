  }
  
  .aurora-input {
    @apply py-4 px-4 text-base rounded-2xl;
    min-height: 52px;
  }
}

/* Radial gradient utilities for Aurora effects */
.bg-gradient-radial {
  background-image: radial-gradient(circle, var(--tw-gradient-stops));
}

/* Line clamp utility */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Scale utilities */
.scale-98 {
  transform: scale(0.98);
}

.scale-102 {
  transform: scale(1.02);
}

/* Enhanced Aurora shadow effects */
.shadow-glow-primary\/50 {
  box-shadow: 0 0 20px 5px rgba(155, 127, 255, 0.5);
}

.shadow-glow-secondary\/50 {
  box-shadow: 0 0 20px 5px rgba(255, 107, 71, 0.5);
}

.shadow-glow-accent\/50 {
  box-shadow: 0 0 20px 5px rgba(0, 212, 255, 0.5);
}

/* Background size utilities for Aurora animations */
.bg-200\% {
  background-size: 200% 200%;
}

.bg-300\% {
  background-size: 300% 300%;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .card-modern,
  .card-glass,
  .card-glass-intense,
  .card-feature,
  .card-interactive {
    @apply border-2;
  }
  
  .btn-primary,
  .btn-secondary,
  .btn-accent,
  .btn-modern {
    @apply border-2 border-current;
  }
  
  .quiz-option,
  .quiz-option-enhanced {
    @apply border-2;
  }
}

/* Advanced Mobile-Specific Enhancements */
@media (max-width: 768px) {
  /* Touch-optimized scroll containers */
  .mobile-scroll-container {
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  
  .mobile-scroll-container::-webkit-scrollbar {
    display: none;
  }

  /* Enhanced mobile typography */
  .mobile-title {
    font-size: clamp(1.5rem, 4vw, 2rem);
    line-height: 1.2;
    letter-spacing: -0.02em;
  }
  
  .mobile-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    line-height: 1.3;
  }
  
  .mobile-body {
    font-size: clamp(0.875rem, 2vw, 1rem);
    line-height: 1.6;
  }

  /* Mobile-specific spacing utilities */
  .mobile-stack > * + * {
    margin-top: 1rem;
  }
  
  .mobile-stack-lg > * + * {
    margin-top: 1.5rem;
  }
  
  .mobile-stack-sm > * + * {
    margin-top: 0.5rem;
  }

  /* Mobile card optimizations */
  .mobile-card {
    @apply bg-surface-800/25 backdrop-blur-lg border border-surface-700/40 rounded-2xl p-4 transition-all duration-300;
    -webkit-tap-highlight-color: rgba(155, 127, 255, 0.1);
  }
  
  .mobile-card:active {
    @apply scale-98 bg-surface-800/40;
  }

  /* Mobile navigation helpers */
  .mobile-nav-item {
    @apply flex items-center justify-center p-3 rounded-xl text-sm font-medium transition-all duration-300 touch-target;
    min-height: 48px;
    -webkit-tap-highlight-color: transparent;
  }
  
  .mobile-nav-item:active {
    @apply scale-95 bg-surface-800/30;
  }

  /* Mobile form optimizations */
  .mobile-input {
    @apply input-modern text-base;
    min-height: 48px;
    font-size: 16px; /* Prevents zoom on iOS */
  }
  
  .mobile-textarea {
    @apply mobile-input min-h-[120px] resize-none;
  }

  /* Mobile modal optimizations */
  .mobile-modal {
    @apply fixed inset-0 z-50 bg-surface-900/95 backdrop-blur-xl;
  }
  
  .mobile-modal-content {
    @apply bg-surface-800/90 backdrop-blur-xl border border-surface-700/40 rounded-t-3xl;
    max-height: 90vh;
  }

  /* Mobile-optimized animations (reduced for better performance) */
  .mobile-fade-in {
    animation: mobileFadeIn 0.3s ease-out forwards;
  }
  
  .mobile-slide-up {
    animation: mobileSlideUp 0.4s ease-out forwards;
  }

  /* Mobile touch feedback */
  .mobile-touch-feedback {
    position: relative;
    overflow: hidden;
  }
  
  .mobile-touch-feedback:active::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(155, 127, 255, 0.1);
    pointer-events: none;
    animation: touchFeedback 0.3s ease-out;
  }

  /* Mobile grid optimizations */
  .mobile-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
  }
  
  .mobile-grid-2 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  @media (min-width: 375px) {
    .mobile-grid-sm-2 {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 414px) {
    .mobile-grid-lg-3 {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Mobile-specific Aurora effects (optimized) */
  .mobile-aurora-glow {
    box-shadow: 0 0 15px 3px rgba(155, 127, 255, 0.3);
  }
  
  .mobile-aurora-card {
    @apply bg-surface-800/25 backdrop-blur-lg border border-surface-700/40 rounded-2xl p-4 transition-all duration-300 bg-gradient-to-br from-primary-500/10 to-secondary-500/10 border-primary-500/20;
    -webkit-tap-highlight-color: rgba(155, 127, 255, 0.1);
  }
  
  .mobile-aurora-button {
    @apply bg-primary-500 text-white px-6 py-3.5 rounded-xl font-medium transition-all duration-300 ease-out hover:bg-primary-400 hover:shadow-glow-primary hover:-translate-y-0.5 active:scale-95 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-surface-900 shadow-glow-primary/50;
    min-height: 48px;
  }
}

/* Mobile-specific keyframe animations */
@keyframes mobileFadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes mobileSlideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes touchFeedback {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(1.1);
  }
}

/* Dark mode and system preferences optimization */
@media (prefers-color-scheme: dark) {
  :root {
    color-scheme: dark;
  }
  
  /* Enhanced Aurora colors for dark mode */
  .aurora-enhanced {
    --aurora-primary: rgba(155, 127, 255, 0.4);
    --aurora-secondary: rgba(255, 107, 71, 0.4);
    --aurora-accent: rgba(0, 212, 255, 0.4);
  }
}

/* System-level mobile optimizations */
@supports (-webkit-touch-callout: none) {
  /* iOS Safari specific optimizations */
  .ios-safe-area {
    padding-top: constant(safe-area-inset-top);
    padding-top: env(safe-area-inset-top);
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
  }
  
  /* Prevent rubber band scrolling */
  .ios-no-bounce {
    overscroll-behavior-y: contain;
  }
}

/* Android-specific optimizations */
@media screen and (-webkit-device-pixel-ratio: 2) and (orientation: portrait) {
  .android-optimized {
    -webkit-tap-highlight-color: rgba(155, 127, 255, 0.15);
  }
}

/* Print styles for mobile sharing */
@media print {
  .mobile-print-hide {
    display: none !important;
  }
  
  .mobile-card,
  .aurora-card {
    break-inside: avoid;
    border: 1px solid #ccc;
  }
}

/* Accessibility enhancements for mobile */
@media (prefers-reduced-motion: reduce) {
  .mobile-fade-in,
  .mobile-slide-up,
  .mobile-aurora-glow {
    animation: none !important;
    transition: none !important;
  }
}